# Database
DATABASE_PATH=data/medley.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=9876

# Streamlit Configuration
STREAMLIT_PORT=9877

# Embedding Model
EMBEDDING_MODEL=BAAI/bge-m3

# Index Configuration (HNSWLib parameters)
# These parameters control the ANN index quality and performance.
# With HNSW_AUTO_ADJUST=true (default), parameters are automatically adjusted for small datasets.

# HNSW_M: Number of bi-directional links per node
# Higher = better recall but more memory usage
# Recommended values based on dataset size:
#   <10 songs:    2-4
#   10-100 songs: 4-8
#   100-1000 songs: 8-16
#   >1000 songs: 16-32
HNSW_M=16

# HNSW_EF_CONSTRUCTION: Search width during index construction
# Higher = better index quality but slower build time
# Recommended values based on dataset size:
#   <10 songs:    10-20
#   10-100 songs: 20-50
#   100-1000 songs: 50-100
#   >1000 songs: 100-200
HNSW_EF_CONSTRUCTION=200

# HNSW_EF_SEARCH: Search width during query time
# Higher = better recall but slower search
# Must be >= k (number of results requested)
# Recommended values based on dataset size:
#   <10 songs:    10
#   10-100 songs: 10-20
#   100-1000 songs: 20-50
#   >1000 songs: 50-100
HNSW_EF_SEARCH=50

# HNSW_AUTO_ADJUST: Automatically adjust parameters for small datasets
# When true, M and ef_construction are capped based on dataset size
# Recommended: true (especially for datasets < 100 songs)
HNSW_AUTO_ADJUST=true

# Logging
LOG_LEVEL=INFO
